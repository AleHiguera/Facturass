@page "/nueva-factura"
@rendermode InteractiveServer
@using blazor.Components.Data
@using blazor.Components.Servicios
@inject blazor.Components.Servicios.ServicioControlador ServicioControlador
@inject NavigationManager Navigation
<div class="facturapro-bg">
    <div class="facturapro-card" style="max-width: 900px; padding: 30px; margin: 30px auto;">

        <h3 class="fp-title" style="font-size: 2.5rem; margin-bottom: 0;">
            <span class="fp-primary-color">📝 Crear Nueva Factura</span>
        </h3>

        <hr style="border-color: var(--fp-primary); opacity: 0.5;" />

        <EditForm EditContext="@EditContext" OnValidSubmit="GuardarFactura">
            <DataAnnotationsValidator />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="nombreCliente" class="form-label" style="color: var(--fp-primary); font-weight: 600;">Nombre del Cliente</label>
                    <InputText id="nombreCliente" @bind-Value="FacturaNueva.NombreCliente" class="form-control" style="border-color: var(--fp-primary-border);" />
                    <ValidationMessage For="@(() => FacturaNueva.NombreCliente)" style="color: var(--fp-error);" />
                </div>

                <div class="col-md-6 mb-3">
                    <label for="fechaFactura" class="form-label" style="color: var(--fp-primary); font-weight: 600;">Fecha de la Factura</label>
                    <InputDate id="fechaFactura" @bind-Value="FacturaNueva.FechaFactura" class="form-control" style="border-color: var(--fp-primary-border);" />
                    <ValidationMessage For="@(() => FacturaNueva.FechaFactura)" style="color: var(--fp-error);" />
                </div>
            </div>

            <h4 class="mt-4" style="color: var(--fp-secondary); font-weight: 700;">Artículos</h4>
            <hr style="border-color: var(--fp-primary-border); opacity: 0.5;" />

            <div class="table-responsive">
                <table class="table table-bordered table-facturapro" style="border-radius: 10px; overflow: hidden; border: 1px solid var(--fp-primary-border);">
                    <thead style="background-color: var(--fp-secondary); color: white;">
                        <tr>
                            <th>Descripción</th>
                            <th style="width: 100px;" class="text-end">Cantidad</th>
                            <th style="width: 150px;" class="text-end">Precio Unitario</th>
                            <th style="width: 150px;" class="text-end">Subtotal</th>
                            <th style="width: 50px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var articulo in FacturaNueva.Articulos)
                        {
                            <tr style="background-color: @(FacturaNueva.Articulos.IndexOf(articulo) % 2 == 0 ? "white" : "var(--fp-surface-alt)");">
                                <td>
                                    <InputText @bind-Value="articulo.Descripcion"
                                               @oninput="@(() => EditContext.Validate())"
                                               class="form-control"
                                               style="border-color: var(--fp-primary-border); padding: 0.25rem 0.5rem;" />
                                    <ValidationMessage For="@(() => articulo.Descripcion)" style="color: var(--fp-error);" />
                                </td>
                                <td>
                                    <InputNumber @bind-Value="articulo.Cantidad" class="form-control text-end" style="border-color: var(--fp-primary-border); padding: 0.25rem 0.5rem;" />
                                    <ValidationMessage For="@(() => articulo.Cantidad)" style="color: var(--fp-error);" />
                                </td>
                                <td>
                                    <InputNumber @bind-Value="articulo.Precio" step="0.01" class="form-control text-end" style="border-color: var(--fp-primary-border); padding: 0.25rem 0.5rem;" />
                                    <ValidationMessage For="@(() => articulo.Precio)" style="color: var(--fp-error);" />
                                </td>
                                <td class="text-end" style="color: var(--fp-secondary); font-weight: 700;">
                                    $@articulo.Subtotal.ToString("N2")
                                </td>
                                <td>
                                    <button type="button" class="btn btn-sm fp-action-delete" @onclick="() => RemoverArticulo(articulo)">
                                        🗑️
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5" style="background-color: white;">
                                <button type="button" class="fp-button-elevated" @onclick="AgregarArticulo" style="font-size: 1rem; padding: 10px 20px; background-color: var(--fp-tertiary); color: white; border-color: var(--fp-tertiary);">
                                    ➕ Agregar Artículo
                                </button>
                            </td>
                        </tr>
                        <tr style="background-color: var(--fp-secondary); color: white; font-size: 1.1rem; font-weight: 700;">
                            <th class="text-end" colspan="3">Total Estimado:</th>
                            <th class="text-end" colspan="2">$@FacturaNueva.Total.ToString("N2")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>

        </EditForm>
    </div>
</div>

<div class="fab-container">

        <button class="fp-fab-secondary" @onclick="GuardarFactura">
        <i class="oi oi-check"></i> 💾 
    </button>
    <button class="fp-efab" type="submit" form="EditForm" @onclick="Volver">
        Cancelar
    </button>
</div>

@code {
    private EditContext EditContext;

    public Factura FacturaNueva { get; set; } = new Factura
    {
        FechaFactura = DateTime.Now,
        Articulos = new List<Factura.ArticuloFactura>()

    };

    protected override void OnInitialized()
    {
        if (!FacturaNueva.Articulos.Any())
        {
            FacturaNueva.Articulos.Add(new Factura.ArticuloFactura());
        }
        EditContext = new EditContext(FacturaNueva);
    }

    private void AgregarArticulo()
    {
        FacturaNueva.Articulos.Add(new Factura.ArticuloFactura());
        StateHasChanged();
        EditContext.Validate();
    }

    private void RemoverArticulo(Factura.ArticuloFactura articulo)
    {
        FacturaNueva.Articulos.Remove(articulo);

        if (!FacturaNueva.Articulos.Any())
        {
            FacturaNueva.Articulos.Add(new Factura.ArticuloFactura());
        }

        StateHasChanged();
        EditContext.Validate();
    }

    private async Task GuardarFactura()
    {
        if (EditContext.Validate())
        {
            await ServicioControlador.GuardarNuevaFacturaAsync(FacturaNueva);
            await ServicioControlador.CargarFacturasAsync();
            Navigation.NavigateTo("/Vista");
        }
    }

    private void Volver()
    {
        Navigation.NavigateTo("/Vista");
    }
}